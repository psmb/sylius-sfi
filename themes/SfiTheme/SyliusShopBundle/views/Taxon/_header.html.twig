{% include '@SyliusShop/Taxon/_breadcrumb.html.twig' %}

{{ sonata_block_render_event('sylius.shop.taxon.header.before', {'taxon': taxon}) }}

<h1 class="ui monster section header" style="margin-bottom: -22px; margin-top: 12px;">
    {{ taxon.name }}
    <div class="sub header">{{ taxon.description }}</div>
</h1>

{% if taxon.images.first is not empty %}
    {% set path = taxon.images.first.path|imagine_filter(filter|default('sylius_shop_product_large_thumbnail')) %}
    <img src="{{ path|replace({'http:': 'https:'}) }}" id="main-image" alt="{{ taxon.name }}"/>
{% endif %}

{{ sonata_block_render_event('sylius.shop.taxon.header.after', {'taxon': taxon}) }}
